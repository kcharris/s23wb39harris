extends layout


block content

  h1= title
  p #{"Rows:" + query.rows + " " + "Cols:" + query.cols}
  - rows = Number(query.rows)
  - cols = Number(query.cols)
  if !Number.isInteger(rows) || !Number.isInteger(cols)
    p One of the items is not an integer 
  else if rows < 1 || rows > 10
    p Rows is not within the range
  else if cols < 1 || cols > 10
    p Cols is not within the range
  else 
    table#outer
      -for(let i=0; i < rows;i++){
        tr#middle
          -for(let j=0; j<cols; j++){
            td= Math.max(j + 1 - i, 0)
          -}
      -}
  
  
